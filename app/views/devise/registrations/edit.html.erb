<div class="wrap">
<div class="login">
  <div class="login__top">
    <div class="login__top__side">
      <div class="login__top__side__box">
      <%= link_to root_path do %>
        <div class="login__top__side__box__icon">
          <i class="fas fa-gift"></i><br>
        </div>
        <div class="login__top__side__box__name">
          <p>Secret</p>
          <p>Santa</p>
          <p>365</p>
        </div>
         <% end %>
      </div>
    </div>
    <div class="login__top__main">
      <div class="login__top__main__contents">
        <h1>Edit my account</h1>
        <%= form_for (@user), class: :form, local: true do |form| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="login__top__main__contents__username">
            <%= form.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Name" %>
          </div>
          <div class="login__top__main__contents__email">
            <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>
          </div>
          <div class="login__top__main__contents__description">
            <%= form.text_field :description, autocomplete: "description", placeholder:"Description" %>
          </div>
          <div class="login__top__main__contents__password">
            <%= form.password_field :password, autocomplete: "new-password", placeholder:"Password (6 characters minimum)" %>
          </div>

          <div class="login__top__main__contents__password">
            <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password confirmation" %>
          </div>

          <div class="postsnew__containers__container__form__images">
            <div class="postsnew__containers__container__form__images__show">
              <% if @user.image.present? %>
                <%= image_tag @user.image, id: :img_prev %>
              <% else %>
                <%= image_tag "/assets/Insert.png", id: :img_prev %>
              <% end %>
              </div>
            <%= form.label :image, class: 'postsnew__containers__container__form__images__image' do %>
              <div class="postsnew__containers__container__form__images__image__img">
                <%= icon('fas', 'image') %>
                Select image
              </div>
              <%= form.file_field :image, class: 'postsnew__containers__container__form__images__image__file' %>
              <% end %>
           </div>
               <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="devise__edit__contents__content__password">
              <%= form.label :current_password %> <br/><i>(we need your current password to confirm your changes)</i><br />
              <%= form.password_field :current_password, autocomplete: "current-password" %>
            </div>
          <%= form.submit "Edit", class:"login__top__main__contents__signup"%>

        <% end %>
      <%= link_to "mypageに戻る", :back, class: 'btn'%>


    </div>

  
</div>

</div>

   