<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>

    <% @user.following.each do |user| %>
      <%= user.name %> 
      <%= link_to '詳細', user_path(user) %>
    <% end %>
    <% @user.followers.each do |user| %>
      <%= user.name %>
      <%= link_to '詳細', user_path(user) %>
    <% end %>
    
      <%= will_paginate %>
    <% end %>
  </div>
</div>