  <%= render 'layouts/header'%>


    <div class ="postsnew__containers">
      <div class ="postsnew__containers__container">
        <div class="postsnew__containers__container__title">
          Create New Post
        </div>
        <div class="postsnew__containers__container__form">
          <%= form_for (@post), class: :form, local: true do |form| %>
          <div class="postsnew__containers__container__form__item">Category</div>
          <div class="postsnew__containers__container__form__category">
          <%= form.text_area :text, id: :categorysearch%>
          </div>
          <div id="categorysearchresult"></div>
          <%# <%= form.collection_check_boxes :category_ids, Category.all, :id, :name %> 
          <div class="postsnew__containers__container__form__item">もらった人</div>
          <div class="postsnew__containers__container__form__category">
          <%= form.text_area :text, id: :usersearch%>
          </div>
          <div id="usersearchresult"></div>

          <div class="js-add-user" id="chat-group-users">
            <div class="chat-group-user clearfix js-chat-member">
              <p class="chat-group-user__name">
                <%= current_user.name %>
              </p>
            <div class="chat-group-user clearfix js-chat-member">
              <p class="chat-group-user__name">
              <input type="checkbox" value=current_user.id name="group[user_ids][]" />

              </p>
            </div>
            </div>
          </div>
          <div class="postsnew__containers__container__form__item">れい</div>
          <div class="postsnew__containers__container__form__category">
          <%= form.collection_check_boxes :giver_ids, Giver.all, :id, :name %>
          </div>
            <div class="postsnew__containers__container__form__images">
            <%= form.label :image, class: 'postsnew__containers__container__form__images__image' do %>
              <div class="postsnew__containers__container__form__images__image__img">
                <%= icon('fas', 'image') %>
                Select image
              </div>
              <%= form.file_field :image, class: 'postsnew__containers__container__form__images__image__file' %>
            <% end %>
                <div class="postsnew__containers__container__form__images__show">
            <% if @post.image.present? %>
              <%= image_tag @post.image, id: :img_prev %>
            <% else %>
              <%= image_tag "/assets/Insert.png", id: :img_prev %>
            <% end %>
          </div>
           </div>
            <div class="postsnew__containers__container__form__item">Caption</div>
            <%= form.text_area :text, class: :postsnew__containers__container__form__description %>
            <%= form.submit 'Post', class: :postsnew__containers__container__form__btn %>
            <%= link_to "Dashboard", posts_path, class: "postsnew__containers__container__form__back" %>
          <% end %>
        </div>
      </div>
    </div>
