<div class ="message__containers__main">
      <div class ="message__containers__main__top">
        <div class ="message__containers__main__top__content">
          <div class ="message__containers__main__top__content__left">
            <div class="message__containers__main__top__content__left__groupname">Group Name：<%= @group.name %></div>
            <div class="message__containers__main__top__content__left__budget">Budget：<%= @group.budget %></div>
            <div class="message__containers__main__top__content__left__date">Date of the gift exchange：<%= @group.period %></div>
            <div class="message__containers__main__top__content__left__participants">
              Participants：
              <% @group.users.each do |user| %>
                <a href="/users/<%= user.id %>">
                  <%= user.name %>
                </a>
              <% end %>
            </div>  
            <div class="message__containers__main__top__content__left__receiver">
            My drawn name：

            </div>
          </div> 
          <div class ="message__containers__main__top__content__right">
          <%= link_to "Edit", edit_group_path(@group.id) %>
          </div>  
        </div>     
    </div>

      <div class ="message__containers__main__middle">
        <div class ="message__containers__main__middle__talk">
        <% @messages.each do |message| %>
          <div class ="message__containers__main__middle__talk__top">
            <div class ="message__containers__main__middle__talk__top__name">
            <%= message.user.name %> 

            </div>
            <div class ="message__containers__main__middle__talk__top__time">

            <%= message.created_at.strftime("%Y年%m月%d日 %H時%M分")%> 

            </div>
          </div>
          <div class ="message__containers__main__middle__talk__bottom">
            <%= message.content %> 
          </div>
        <% end %>
        </div>
      </div>
      <div class ="message__containers__main__bottom">
        <%= form_for [@group, @message] do |f| %>
          <%= f.text_field :content, class: 'message__containers__main__bottom__left', placeholder: 'type a message' %>
          <div class="message__containers__main__bottom__middle">
            <%= f.label :image, class: 'message__containers__main__bottom__middle__box' do %>
              <%= icon('fas', 'image', class: 'message__containers__main__bottom__middle__box__img') %>
            <% end %>
          </div>
          <%= f.submit 'Send', class: 'message__containers__main__bottom__right' %>
        <% end %>
      </div>
  
    </div>